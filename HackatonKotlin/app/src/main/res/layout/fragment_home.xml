<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp">

        <Switch
            android:id="@+id/homeSwIsEnabled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/home_switch_width"
            android:minHeight="@dimen/home_switch_height"
            android:switchMinWidth="@dimen/home_switch_selector_width"
            android:switchPadding="@dimen/home_switch_selector_padding"
            android:text="@string/home_sw_listener_text"
            android:textColor="@color/switch_color_off"
            android:textSize="@dimen/home_sw_text_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/home_label_log"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_label_log_text"
            android:textSize="@dimen/home_label_log_text_size" />

        <TextView
            android:id="@+id/homeTextViewLog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/log_window_shape"
            android:clickable="false"
            android:paddingStart="10dp"
            android:paddingTop="4dp"
            android:paddingEnd="4dp"
            android:paddingBottom="4dp"
            android:textAlignment="viewStart"
            android:textColor="@color/log_text"
            android:textSize="@dimen/home_log_text_size" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>